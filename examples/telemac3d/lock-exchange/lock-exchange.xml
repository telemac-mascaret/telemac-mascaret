<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="lock-exchange" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="lock-exchange" author="C-T.Pham" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>
   <deco xref="PlotVert1">
      <look aspect="1" size="(20,10)" title="Vertical" roi="(-1;-5)(16;1)"/>
   </deco>
   <deco xref="PlotVert2">
      <look aspect="2" size="(20,10)" title="Vertical" roi="(0;-4)(30;0)"/>
   </deco>
   <deco xref="PlotHoriz">
      <look title="Horizontal" size="(20,5)" roi="(0;0)(30;1.2)" />
   </deco>
   <deco xref="3D_Plot1">
       <look size="(1000,1000)"/>
   </deco>
   <deco xref="3D_Plot1_i">
       <look size="(1000,1000)" interactive="yes"/>
   </deco>
   <deco xref="3D_Layer1">
      <look opacity = "0.5" z_scale = "1" colour_range="(0;1)" number_colours = "10"/>
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_lock-hydro.cas"
       title="lock-exchange scalar mode"
   />
   <action xref="3"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_lock-hydro.cas"
       title="lock-exchange parallel mode"
   />
   <action xref="2"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_lock-nonhydro.cas"
       title="lock-exchange scalar mode"
   />
   <action xref="4"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_lock-nonhydro.cas"
       title="lock-exchange parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T3DRES" />
      <v2 vars=":map" target="f3d_lock-hydro.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.E-5,1.E-4,1.E-5,1.E-3,1.E-3])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="3:T3DRES" />
      <v5 vars=":map" target="f3d_lock-hydro.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1.E-5,1.E-4,1.E-5,1.E-3,1.E-3])" />
   </cast>
   <cast xref="cas-parall13" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T3DRES" />
      <v8 vars=":map" target="3:T3DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1.E-5,1.E-4,1.E-5,1.E-3,1.E-3])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="2:T3DRES" />
      <v11 vars=":map" target="f3d_lock-nonhydro.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[])" />
   </cast>
   <cast xref="ref-4" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="4:T3DRES" />
      <v14 vars=":map" target="f3d_lock-nonhydro.slf" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v15,[])" />
   </cast>
   <cast xref="cas-parall24" config="oneofall" time="[-1]" type="2d:">
      <v16 vars=":map" target="2:T3DRES" />
      <v17 vars=":map" target="4:T3DRES" />
      <v18 vars="mapdiff(v16,v17)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v18,[])" />
   </cast>

