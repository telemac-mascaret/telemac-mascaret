<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="hydraulic_jump" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="hydraulic_jump" author="R.Ata" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
<!-- TODO: Implement analytic solution in python and in parallel -->
<!-- TODO: Add test of hydrualic jump v2p0 -->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_hydraulic_jump_v1p0.cas"
       title="hydraulic_jump scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_hydraulic_jump_v2p0.cas"
       title="hydraulic_jump scalar mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="f2d_hydraulic_jump_v1p0.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-3,1e-3,1e-4,1e-4,1e-9,1e-3,1e-2,1e-2,1e-8,1e-8])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="2:T2DRES" />
      <v11 vars=":map" target="f2d_hydraulic_jump_v1p0.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[1e-3,1e-3,1e-4,1e-4,1e-9,1e-3,1e-2,1e-2,1e-8,1e-8])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

